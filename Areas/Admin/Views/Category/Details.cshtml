@model Category
<h1>Category Details</h1>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category Information</h4>
                <p class="card-description">Here are the details of the selected category:</p>

                <!-- Display Category Details -->
                <div class="form-group">
                    <label><strong>Category Name:</strong></label>
                    <p>@Model.Name</p>
                </div>
                <div class="form-group">
                    <label><strong>Category ID:</strong></label>
                    <p>@Model.Id</p>
                </div>
                <div class="form-group">
                    <label><strong>Status of deleting</strong></label>
                    <p>@Model.IsDeleted</p>
                </div>
                <div class="form-group">
                    <label><strong>Category creation time:</strong></label>
                    <p>@Model.CreatedAt</p>
                </div>
                <div class="form-group">
                    <label><strong>Category products list:</strong></label>
                    @if (Model.Product == null || Model.Product.Count() == 0)
                            {
                        <p>Empty category</p>
                    }
                    else{
                    @foreach(Product product in Model.Product){<p>@product.Name</p>} }

                </div>
            </div>
        </div>
    </div>
</div>
