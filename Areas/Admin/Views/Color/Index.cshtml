@using WebApplication1.Areas.Admin.ViewModels.Colors
@model List<GetColorAdminVM>

@{
   int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Colors Table</h4>

                <div class="table-responsive">
                    <a asp-action="create" class="btn btn-success">Create Color</a>

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products Count
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (GetColorAdminVM ColorVM in Model)
                            {
                                count++;
                                <tr>
                                    <td class="py-1">
                                        @count
                                    </td>
                                    <td>
                                        @ColorVM.Name
                                    </td>
                                    <td>
                                     @ColorVM.ProductColors?.Count

                                    <td>
                                        <a asp-action="update" asp-route-id="@ColorVM.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i></a>
                                        <a asp-action="delete" asp-route-id="@ColorVM.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="detail" asp-route-id="@ColorVM.Id" class="btn btn-primary"><i class="mdi mdi-information-outline"></i></a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>